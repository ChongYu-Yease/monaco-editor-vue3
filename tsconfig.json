{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "baseUrl": ".",
    "module": "esnext",
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "noLib": false,
    "target": "es5",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  }
}