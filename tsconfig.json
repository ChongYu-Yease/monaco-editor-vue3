{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "baseUrl": ".",
    "module": "esnext",
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "noLib": false,
    "target": "es5",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": false
  },
  "include": [
    "./src/monaco-editor"
  ]
  // "files": [
  //   "./src/monaco-editor/index.ts",
  //   "./src/monaco-editor/index.vue",
  //   "./src/monaco-editor/snippets.ts",
  //   "./src/monaco-editor/type.ts"
  // ]
}